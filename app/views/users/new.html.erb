<h1>Create A New User</h1>
<% form_for @user do |f| %>
  <div>
    <%f.label :name, "Name"%>
    <%f.text_field :name %>
    <%f.label :email, "Email"%>
    <%f.text_field :email %>
    <%f.label :password, "Password"%>
    <%f.password_field :password %>
    <%f.label :password_confirmation, "Confirm Password"%>
    <%f.password_field :password_confirmation %>
    <%f.submit "Create Account"  %>
  </div>
<% end %>